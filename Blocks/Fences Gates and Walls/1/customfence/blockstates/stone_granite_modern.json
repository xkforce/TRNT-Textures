{
  "multipart": [
    {
      "when": { "up": "true" },
      "apply": { "model": "customfence:stone_granite_modern/stone_granite_modern_post" }
    },
    {
      "when": { "north": "true" },
      "apply": { "model": "customfence:stone_granite_modern/stone_granite_modern_side", "uvlock": "true" }
    },
    {
      "when": { "east": "true" },
      "apply": { "model": "customfence:stone_granite_modern/stone_granite_modern_side", "y": 90, "uvlock": "true" }
    },
    {
      "when": { "south": "true" },
      "apply": { "model": "customfence:stone_granite_modern/stone_granite_modern_side", "y": 180, "uvlock": "true" }
    },
    {
      "when": { "west": "true" },
      "apply": { "model": "customfence:stone_granite_modern/stone_granite_modern_side", "y": 270, "uvlock": "true" }
    }
  ]
}
